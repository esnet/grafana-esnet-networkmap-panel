{
  "extends": "./.config/tsconfig.json",
  "includes": ["src", "types"],
  "compilerOptions": {
    "jsx": "react",
    "rootDir": "./src",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "$$ts-jest$$",
    "moduleResolution": "node"
  },
  "exclude": ["public", "dist", "node_modules", "src/components/lib"]
}